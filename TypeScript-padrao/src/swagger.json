    "paths": {
        "/categories": {
            "post": {
                "tags": ["Category"],
                "summary": "create a category",
                "description": "create a new category",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type":"object",
                                "properties": {
                                    "name": {
                                            "type": "string"
                                    },
                                    "description":{
                                        "type":"string"
                                    }
                                },
                                "exemple": {
                                    "name":"Category name sample ",
                                    "description": "Category description sample"
                                }
                            }
                        }
                    }
                }, 
                "responses": {
                        "201": {
                            "description": "Created"
                        },
                        "500":{
                             "description": "Category already exists"
                        }
                }
            },
            "get": {
                "tags": ["Category"],
                "summary":"list all categories",
                "description": "list all categories",
                "responses": {
                    "200":{
                        "description": "Sucess",
                        "constent":{
                            "application/json":{
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "name": {
                                            "type":"string"
                                        },
                                        "description": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
                        
        },
        "categories/import":{
            "post":{
                "tags":["Category"],
                "summary":"Upload new Category",
                "description":"Upload a new category",
                "requestBody":{
                    "content":{
                        "multipart/form-data":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "file":{
                                        "type":"string",
                                        "format":"binary"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "201":{
                        "description":"Created"
                    }
                }
            }
        },
        "/specifications":{
            "post":{
                "tags":["Specifications"],
                "summary":"Create specifications",
                "description":"Create a specification",
                "requestBody":{
                    "content":{
                        "application/json":{
                            "schema":{
                              "$ref":"#/definitions/Specification"
                            }
                        }
                    }
                },
                "responses":{
                    "201":{
                        "description":"Created"
                    },
                    "500":{
                        "description":"Specification already exists!"
                    }
                }
            }
        }
    },
    "definitions": {
        "Specification":{
            "type":"object",
            "properties":{
                "name":{
                    "type":"string"
                },
                "description": {
                    "type":"string"
                }
            }
        }
    }                
}
            
        